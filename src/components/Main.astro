---
import About from './About.astro';
---

<main>

    <section class="hero container">
        <img class="hero__img" src="" alt="Profile picture">
        <h2 class="hero__subtitle">Hey, I'm Jesse</h2>
        <h1 class="hero__title">Full Stack <br> Web Developer</h1>
        <p class="hero__paragraph">
            An aspiring <strong>Full Stack Developer</strong> that enjoys making websites for fun XD
        </p>
        <a class="hero__btn btn" href="">Contact Me</a>
    </section>

    <About/>

    <section></section>
    <section></section>
    <section></section>
</main>


<style>

    .hero{
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .hero__img{
        background-color: green;
        border-radius: 50%;
        width: 6rem;
        height: 6rem;
    }

    .hero__subtitle{
        color: var(--color-slate800);
        font-size: var(--size-base);
        line-height: 0.9;
    }

    .hero__title{
        color: var(--color-slate400);
        text-transform: uppercase;
        font-size: var(--size-4xl);
        letter-spacing: -0.05em;
        line-height: 0.9;
    }

    .hero__paragraph{
        max-width: 60ch;
        font-size: var(--size-sm);
        color: var(--color-slate600);
    }

    .hero__btn{
        text-transform: capitalize;
        font-size: var(--size-sm);
    }

    @media (min-width: 475px){
        .hero{
            gap: 1.5rem;
        }

        .hero__img{
            background-color: green;
            width: 6.5rem;
            height: 6.5rem;
        }

        .hero__subtitle{
            font-size: var(--size-lg);
        }

        .hero__title{
            font-size: var(--size-5xl);

        }

        .hero__paragraph{
            font-size: var(--size-base);
        }

        .hero__btn{
            font-size: var(--size-base);
        }
    }


    @media (min-width: 640px){
    }


    @media (min-width: 768px){

    }



    @media (min-width: 1024px){

        .hero__img{
            background-color: green;
            width: 8rem;
            height: 8rem;
        }

        .hero__subtitle{
            font-size: var(--size-2xl);
        }

        .hero__title{
            font-size: var(--size-7xl);

        }

        .hero__paragraph{
            font-size: var(--size-lg);
        }

        .hero__btn{
            font-size: var(--size-lg);
        }
    }


    @media (min-width: 1280px){
        .hero{
            gap: 2rem;
        }

        .hero__img{
            background-color: green;
            width: 10rem;
            height: 10rem;
        }

        .hero__subtitle{
            font-size: var(--size-4xl);
        }

        .hero__title{
            font-size: var(--size-8xl);

        }

        .hero__paragraph{
            font-size: var(--size-xl);
        }

        .hero__btn{
            font-size: var(--size-xl);
        }
    }


    @media (min-width: 1536px){
    }

</style>